#!/usr/bin/env bash

# _dotvim_setup()
#
# Usage:
#   _dotvim_setup
#
# Description:
#   Setup dotvim, linking configuring files.
_dotvim_setup() {

  _dotvim_setup_config_files() {
    local _files=(
      .gvimrc
      .gvimrc.after
      .vimrc
      .vimrc.after
      .vimrc.before
    )

    for __file in ${_files[@]}
    do
      if [[ ! -e "${HOME}/${__file}" ]]
      then
        ln -s "${HOME}/config/home/${__file}" "${HOME}/${__file}"
        printf "Linked: ~/%s -> ~/.vim/config/home/%s\\n" "${__file}" "${__file}"
      else
        printf "Already Exists: %s\\n" "${__file}"
      fi
    done
  } && _dotvim_setup_config_files

  _dotvim_setup_neovim_config() {
    if [[ ! -e "${HOME}/.config/nvim" ]]
    then
      ln -s "${HOME}/.config/nvim" "${HOME}/config/home/.config/nvim"
      printf "Linked: ~/%s -> %s\\n" \
        "${HOME}/.config/nvim" \
        "${HOME}/config/home/.config/nvim"
    else
      printf "Already Exists: ~/.config/nvim\\n"
    fi
  } && _dotvim_setup_neovim_config

} && _dotvim_setup
